@model TaskManager.Models.Group

@{
    ViewData["Title"] = "Szczegóły grupy";
}

<h1>Szczegóły grupy</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @(Model.Description ?? "Brak opisu")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class="col-sm-10">
            @(Model.Manager?.GetFullName() ?? "Brak menadżera")
        </dd>
    </dl>
</div>

<div>
    <h4>Członki grupy</h4>
    <hr />
    @if (Model.Members != null && Model.Members.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Email</th>
                    <th>Telefon</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model.Members.OrderBy(m => m.LastName))
                {
                    <tr>
                        <td>@member.GetFullName()</td>
                        <td>@member.Email</td>
                        <td>@member.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Grupa nie posiada członków.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powrót do menu</a>
</div>
