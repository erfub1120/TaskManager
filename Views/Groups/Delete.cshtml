@model TaskManager.Models.Group

@{
    ViewData["Title"] = "Usuń grupę";
    var hasActiveTasks = ViewBag.HasActiveTasks ?? false;
    var activeTasksCount = ViewBag.ActiveTasksCount ?? 0;
    var totalTasksCount = ViewBag.TotalTasksCount ?? 0;
    var membersCount = ViewBag.MembersCount ?? 0;
}

<h1>Usuń grupę</h1>


@if (hasActiveTasks)
{
    <div class="alert alert-danger" role="alert">
        <strong>Uwaga!</strong> Ta grupa ma <strong>@activeTasksCount</strong> aktywne zadania (z @totalTasksCount łącznie).
        Nie możesz usunąć grupy, która ma aktywne zadania. Najpierw zakończ lub usuń wszystkie aktywne zadania.
    </div>
}
else if (totalTasksCount > 0)
{
    <div class="alert alert-warning" role="alert">
        <strong>Uwaga!</strong> Ta grupa ma @totalTasksCount zakończonych zadań, które zostaną również usunięte.
    </div>
}

@if (membersCount > 0)
{
    <div class="alert alert-info" role="alert">
        <strong>Informacja:</strong> Ta grupa ma @membersCount członków. Zostaną oni odłączeni od grupy (ale nie usunięci).
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Manager?.GetFullName() ?? "Brak menadżera")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (hasActiveTasks)
        {
            <button type="submit" class="btn btn-danger" disabled>Usuń (Niedostępne - są aktywne zadania)</button>
        }
        else
        {
            <input type="submit" value="Usuń" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć tę grupę?');" />
        }
        <text> | </text>
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
