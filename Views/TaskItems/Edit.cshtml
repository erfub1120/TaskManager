@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Edytuj zadanie";
    var isUser = ViewBag.IsUser ?? false;
    var canEditAllFields = ViewBag.CanEditAllFields ?? false;
}

<h1>Edytuj zadanie</h1>

@if (isUser)
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> <strong>User Mode:</strong> You can only update the task status.
    </div>
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedById" />
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly="@isUser" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" readonly="@isUser"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
                @if (isUser)
                {
                    <small class="form-text text-success">Możesz edytować to pole.</small>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control" asp-items="ViewBag.Priority" disabled="@isUser"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" type="date" readonly="@isUser" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            @if (canEditAllFields)
            {
                <div class="form-group mb-3">
                    <label asp-for="GroupId" class="control-label">Grupa</label>
                    <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AssignedUserId" class="control-label">Przypisz do</label>
                    <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.AssignedUserId">
                    </select>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="GroupId" />
                <input type="hidden" asp-for="AssignedUserId" />
            }

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
